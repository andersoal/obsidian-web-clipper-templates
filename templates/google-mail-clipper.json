{
	"schemaVersion": "0.1.0",
	"name": "Google Mail",
	"behavior": "create",
	"noteContentFormat": "\n#mail/unread\n\n> [!INFO]+ Message details\n> Received: {{selector:div.adn.ads:not([style*=\"display: none\"]) .gE.iv.gt span.g3?title|first|date:\"YYYY-MM-DDTHH:mm\"}}\n> Subject: {{selector:div.ha:not(:where([style*=\"display: none\"]) *) > h2|first}}\n\n\n# {{selector:div.ha:not(:where([style*=\"display: none\"]) *) > h2|first}}\n\n{{selectorHtml:div.a3s:not(:where([style*=\"display: none\"]) *)|first|remove_tags:(\"table,td,tr,border\")|markdown}}",
	"properties": [
		{
			"name": "title",
			"value": "{{selector:div.ha:not(:where([style*=\\\"display: none\\\"]) *) > h2|first|safe_name|trim}}",
			"type": "text"
		},
		{
			"name": "url",
			"value": "https://mail.google.com/mail/u/?authuser={{selector:span.g2?email}}#inbox/{{selector:div.ha > h2?data-legacy-thread-id}}",
			"type": "text"
		},
		{
			"name": "created",
			"value": "{{time|date:\\\"YYYY-MM-DDTHH:mm:ssZ\\\"}}",
			"type": "datetime"
		},
		{
			"name": "published",
			"value": "{{selector:div.adn.ads:not([style*=\\\"display: none\\\"]) .gE.iv.gt span.g3?title|first|date:\\\"YYYY-MM-DDTHH:mm\\\"}}",
			"type": "datetime"
		},
		{
			"name": "reviewed",
			"value": "",
			"type": "datetime"
		},
		{
			"name": "author",
			"value": "{{selector:span[class=\\\"gD\\\"]:not(:where([style*=\\\"display: none\\\"]) *)?name|wikilink|first}} <{{selector:span[class=\\\"gD\\\"]:not(:where([style*=\\\"display: none\\\"]) *)?email|first}}>",
			"type": "multitext"
		},
		{
			"name": "tags",
			"value": "email,clippings",
			"type": "multitext"
		}
	],
	"triggers": [
		"https://mail.google.com/mail"
	],
	"noteNameFormat": "{{selector:div.adn.ads:not([style*=\"display: none\"]) .gE.iv.gt span.g3?title|first|date:\"YYYY-MM-DD\"|safe_name|trim}} MAIL {{selector:div.ha:not(:where([style*=\"display: none\"]) *) > h2|safe_name|trim}}",
	"path": "PKM/Clippings/Mail"
}